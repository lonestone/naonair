{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "types": [],
    "outDir": "./dist",
    "baseUrl": "src",
    "isolatedModules": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
